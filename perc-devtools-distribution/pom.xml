<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>core</artifactId>
        <groupId>com.percussion</groupId>
        <version>8.0.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>perc-devtools-distribution</artifactId>
    <properties>
        <assembly-directory>${basedir}/target/distribution</assembly-directory>
        <devtools-directory>${assembly-directory}/devtools</devtools-directory>
        <packaging-directory>${devtools-directory}/packaging</packaging-directory>
        <workbench-directory>${devtools-directory}/workbench</workbench-directory>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.percussion</groupId>
            <artifactId>CMLite-Main-PackagerUI</artifactId>
            <version>8.0.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
<build>
    <plugins>
        <plugin>
            <artifactId>maven-resources-plugin</artifactId>
            <version>3.1.0</version>
            <executions>
                <execution>
                    <id>copy-resources</id>
                    <phase>generate-resources</phase>
                    <goals>
                        <goal>copy-resources</goal>
                    </goals>
                    <configuration>
                        <outputDirectory>${devtools-directory}</outputDirectory>
                        <resources>
                            <resource>
                                <directory>src/main/resources/scripts</directory>
                                <filtering>true</filtering>
                            </resource>
                        </resources>
                    </configuration>
                </execution>
            </executions>
        </plugin>
    <plugin>

    <artifactId>maven-dependency-plugin</artifactId>
    <executions>
    <!--
    The jetty-home artifact is the starting point for the jetty-distribution
    and must happen early in the build process
    -->
    <execution>
        <id>copy</id>
        <phase>generate-resources</phase>
        <goals>
            <goal>copy-dependencies</goal>
            <goal>copy</goal>
        </goals>
        <configuration>
            <artifactItems>
                <artifactItem>
                    <groupId>com.percussion</groupId>
                    <artifactId>CMLite-Main-PackagerUI</artifactId>
                    <version>8.0.0-SNAPSHOT</version>
                    <type>jar</type>
                    <overWrite>true</overWrite>
                    <outputDirectory>${packaging-directory}</outputDirectory>
                    <destFileName>perc-packaging-tools.jar</destFileName>
                </artifactItem>
            </artifactItems>
            <outputDirectory>${packaging-directory}/lib</outputDirectory>
            <overWriteReleases>false</overWriteReleases>
            <overWriteSnapshots>true</overWriteSnapshots>
        </configuration>
    </execution>
    </executions>
    </plugin>
    </plugins>
</build>
</project>